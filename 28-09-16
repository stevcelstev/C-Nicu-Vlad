using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApplication8
{
    class Program
    {
        static void Main(string[] args)
        {
            string sirCitit;
            sirCitit = Console.ReadLine();
            Console.WriteLine(sirCitit);
            
            string s1, s2, s;
            s1 = "Hello ";
            s2 = "world!";
            s = s1 + s2; //Concatenare

            Console.WriteLine(s);

            s1 = "casa";
            s2 = "casa";
            //Operatori de egalitate
            // if (s1 == s2) { Console.WriteLine("IDENTICE!"); }
            // else { Console.WriteLine("NU SUNT IDENTICE!"); }

            if (s1 != s2) { Console.WriteLine("'{0}' DIFERIT DE '{1}'", s1, s2); }
            else { Console.WriteLine("'{0}' IDENTIC CU '{1}'", s1, s2); }
            
            //Operatorl de atribuire
            s1 = s2;
            Console.WriteLine(s1);
            
            string mesaj = "primul \n al doilea";
            Console.WriteLine(mesaj);

            mesaj = @"primul 
            al doilea";
            Console.WriteLine(mesaj);
            
            // lungimea unu sir de caractere
            string sir = "Deny are mare valoare!";
            Console.WriteLine("'" + sir + "'" + "= " + sir.Length);
            
            // + functii de cautare pe grup
            // XII-A
            
            Console.ReadKey();
        }
    }
}
